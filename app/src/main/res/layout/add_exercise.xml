<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Main Data (Required)"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise: "
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/exerciseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Exercise"
                    android:inputType="text"
                    android:textSize="14dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories Burned:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/caloriesBurned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Calories Burned (cal)"
                    android:inputType="number"
                    android:textSize="14dp" />

            </TableRow>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Additional Data (Optional)"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise Details:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/exercise_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Exercise Details"
                    android:inputType="text"
                    android:textSize="14dp" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#4169e1"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="#4169e1"
        android:textColor="@color/white"

        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent" />


</RelativeLayout>