<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/totalCaloriesConsumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Total Calories Consumed :"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/totalFatConsumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Total Fat Consumed :"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/totalCholesterolConsumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Total Cholesterol Consumed :"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/totalSodiumConsumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Total Sodium Consumed :"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/totalCarbohydratesConsumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Total Carbohydrates Consumed :"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/totalProteinConsumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Total Protein Consumed :"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Meals Eaten:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="100dp"
            android:background="@color/grey"
            android:paddingHorizontal="5dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/nutritionScrollable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

    </LinearLayout>


